<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>	
	<LIGHT id="light0">                                    
        <enable value ="1" />                   	       
        <position  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
	
	<LIGHT id="light1">                                    
        <enable value ="1" />                   	      
        <position x="30" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
	
	<LIGHT id="light2">                                   
        <enable value ="1" />                   	       
        <position x="0" y="10" z="20" w="1" />       		   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

    <LIGHT id="light3">                                   
        <enable value ="1" />                   	       
        <position x="30" y="10" z="20" w="1" />       			
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           	
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />               
        <amplif_factor s="2" t="2" />                           
    </TEXTURE>

     <!-- Tree leaves -->
    <TEXTURE id="folhas">
        <file path="images/leaves.jpg" />                
        <amplif_factor s="3" t="4" />                           
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="rocks">
        <file path="images/rocks.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
        <file path="images/vidral.jpg" />               
        <amplif_factor s="15" t="10" />                           
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
        <file path="images/bank.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>
    
</TEXTURES>


<MATERIALS>
	<!-- Pyramid material -->
    <MATERIAL id="piramideMaterial">                                  
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />        
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />        
        <ambient r="0.2" g="0.2" b="0.2" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree leaves material -->
	<MATERIAL id="leavesTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />        
        <diffuse r="0.0" g="0.207" b="0.0" a="1" />       
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>
	
	<!-- Tree trunk material -->
	<MATERIAL id="trunkTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />      
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />       
    </MATERIAL>

    <!-- Lamp post material -->
    <MATERIAL id="lightPostMaterial">                                  
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.447" g="0.416" b="0.416" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">                                  
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />       
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />        
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS> 
            <NODEREF id="parteSuperior" />
        </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="parteSuperior">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <DESCENDANTS>
			<NODEREF id="body" />		        
		</DESCENDANTS>
    </NODE>

    <NODE id="body">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <DESCENDANTS>
			<NODEREF id="top" />
            <NODEREF id="bottom" />
            <NODEREF id="front" />
            <NODEREF id="back" />
            <NODEREF id="left" />
            <NODEREF id="right" />
		</DESCENDANTS>
    </NODE>

     <NODE id="top">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        <TRANSLATION x="0.75" y="3.939" z="5.81" />
        <ROTATION axis="x" angle="-90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
 			 <LEAF  type="rectangle" args="0 4.1 5 0" />        
       </DESCENDANTS>
    </NODE>

    <NODE id="bottom">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			
        
        
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5.2 6.55 0" />        
        </DESCENDANTS>
    </NODE>
    
    <NODE id="front">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        
        <TRANSLATION x="0" y="0" z="6.5" />
        <ROTATION axis="x" angle="-10" />
        <DESCENDANTS>
			<NODEREF id="triangulo1" />
            <NODEREF id="triangulo2" />
		</DESCENDANTS>
    </NODE>

    <NODE id="back">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
 
        <ROTATION axis="x" angle="10" />
        <DESCENDANTS>
			<NODEREF id="triangulo1" />
            <NODEREF id="triangulo2" />
		</DESCENDANTS>
    </NODE>

    <NODE id="left">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        
        <ROTATION axis="y" angle="-90" />
        <ROTATION axis="x" angle="-10.75" />
        <DESCENDANTS>
			<NODEREF id="triangulo3" />
            <NODEREF id="triangulo4" />
		</DESCENDANTS>
    </NODE>

    <NODE id="right">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        <TRANSLATION x="6.5" y="0" z="0" />
        <ROTATION axis="y" angle="-90" />
        <ROTATION axis="x" angle="10.75" />
        <DESCENDANTS>
			<NODEREF id="triangulo3" />
            <NODEREF id="triangulo4" />
		</DESCENDANTS>
    </NODE>

    <NODE id="triangulo1">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        
        <DESCENDANTS>
			<LEAF id="triangle1" type="triangle" args="0 0 0 6.5 0 0 0.75 4 0" />
		</DESCENDANTS>
    </NODE>

    <NODE id="triangulo2">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        
        <DESCENDANTS>
			<LEAF id="triangle1" type="triangle" args="6.5 0 0 0.75 4 0 5.75 4 0" />
		</DESCENDANTS>
    </NODE>

   
<NODE id="triangulo3">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        
        <DESCENDANTS>
			<LEAF id="triangle1" type="triangle" args="0 0 0 6.5 0 0 0.69 4.007 0" />
		</DESCENDANTS>
    </NODE>

    <NODE id="triangulo4">      
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			
        
        <DESCENDANTS>
			<LEAF id="triangle1" type="triangle" args="6.5 0 0 0.69 4.007 0 5.81 4.007 0" />
		</DESCENDANTS>
    </NODE>

     
    <NODE id="prisma">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <DESCENDANTS>
       		<NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />      
        </DESCENDANTS>

    </NODE>
    
     <!-- A pyramid -->
    <NODE id="piramide">       

        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			



        <DESCENDANTS>
       		<NODEREF id="meiaPiramide1" /> 
            <NODEREF id="meiaPiramide2" />       
  	 
        </DESCENDANTS>

    </NODE>


    <!-- Half a pyramid -->
    <NODE id="meiaPiramide1">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			

        <DESCENDANTS>
            <NODEREF id="meiaPiramide" />      
        </DESCENDANTS>

    </NODE>

    <!-- The other half -->
    <NODE id="meiaPiramide2">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			


		<ROTATION axis="y" angle="180" />

        <DESCENDANTS>
            <NODEREF id="meiaPiramide" />       
        </DESCENDANTS>

    </NODE>

    <!-- Generic half a pyramid -->
    <NODE id="meiaPiramide">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			

        <DESCENDANTS>
            <NODEREF id="facePiramide1" />       
            <NODEREF id="facePiramide2" />    	 
        </DESCENDANTS>

    </NODE>

    <!-- Pyramid face -->
   <NODE id="facePiramide1">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			


		<ROTATION axis="x" angle="44.42" />
       	<ROTATION axis="y" angle="-45" />
        
        <DESCENDANTS>
					<LEAF id="triangle1" type="triangle" args="2 0 12 12 0 2 0 0 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another pyramid face -->
    <NODE id="facePiramide2">      
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			


       	<ROTATION axis="z" angle="-44.42" />
       	<ROTATION axis="y" angle="45" />  

        <DESCENDANTS>
					<LEAF id="triangle1" type="triangle" args="2 0 12 12 0 2 0 0 0" />
        </DESCENDANTS>

    </NODE>

   
    <NODE id="faceCubo1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
