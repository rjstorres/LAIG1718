<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Tree trunk -->
  <TEXTURE id="steel">
      <file path="latrunculiImages/steel.jpg" />
      <amplif_factor s="1" t="1" />
  </TEXTURE>
</TEXTURES>


<MATERIALS>
    <!-- Light bulb material -->
  <!--  <MATERIAL id="lightMaterial">
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL> -->

    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="steelMaterial">
      <shininess value="1" />
      <specular r="0.9" g="0.9" b="0.9" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="cubo" />
            <NODEREF id="pyramid" />
        </DESCENDANTS>
    </NODE>

   <NODE id="pyramid">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="0" />

        <DESCENDANTS>
					<NODEREF id="facePyr1" />
          <NODEREF id="facePyr2" />
          <NODEREF id="facePyr3" />
				</DESCENDANTS>
    </NODE>
    <NODE id="facePyr1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="0.28" />

        <DESCENDANTS>
          <LEAF type='triangle' args='-0.5 0 0 0 1 -0.28 0.5 0 0' />
				</DESCENDANTS>
    </NODE>
    <NODE id="facePyr2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />


        <ROTATION axis="y" angle="-120" />
        <TRANSLATION x="0" y="0" z="0.28" />

        <DESCENDANTS>
          <LEAF type='triangle' args='-0.5 0 0 0 1 -0.28 0.5 0 0' />
				</DESCENDANTS>
    </NODE>
   <NODE id="facePyr3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="y" angle="120" />
        <TRANSLATION x="0" y="0" z="0.28" />

        <DESCENDANTS>
          <LEAF type='triangle' args='-0.5 0 0 0 1 -0.28 0.5 0 0' />
        </DESCENDANTS>
    </NODE>

    <NODE id="cubo">
        <MATERIAL id="steelMaterial" />
        <TEXTURE id="steel" />

        <SCALE sx="1" sy="1" sz="1" />
        <TRANSLATION x="2" y="0" z="2" />
        <ROTATION axis="x" angle="0" />

        <DESCENDANTS>
					<NODEREF id="faceCubo1" />
          <NODEREF id="faceCubo2" />
          <NODEREF id="faceCubo3" />
          <NODEREF id="faceCubo4" />
          <NODEREF id="faceCubo5" />
          <NODEREF id="faceCubo6" />
				</DESCENDANTS>

    </NODE>
    <NODE id="faceCubo1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <SCALE sx="1" sy="1" sz="1" />
        <TRANSLATION x="-1" y="0" z="0" />
        <ROTATION axis="y" angle="-90" />


        <DESCENDANTS>
					<LEAF type="rectangle" args="-1 1 1 -1" />
				</DESCENDANTS>
    </NODE>
    <NODE id="faceCubo2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="1" />

        <DESCENDANTS>
					<LEAF type="rectangle" args="-1 1 1 -1" />
				</DESCENDANTS>
    </NODE>
    <NODE id="faceCubo3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="1" y="0" z="0" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
					<LEAF type="rectangle" args="-1 1 1 -1" />
				</DESCENDANTS>
    </NODE>
    <NODE id="faceCubo4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="-1" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
					<LEAF type="rectangle" args="-1 1 1 -1" />
				</DESCENDANTS>
    </NODE>
    <NODE id="faceCubo5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="1" z="0" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF type="rectangle" args="-1 1 1 -1" />
				</DESCENDANTS>
    </NODE>
    <NODE id="faceCubo6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="-1" z="0" />
        <ROTATION axis="x" angle="90" />


        <DESCENDANTS>
					<LEAF type="rectangle" args="-1 1 1 -1" />
				</DESCENDANTS>
    </NODE>
</NODES>

</SCENE>
