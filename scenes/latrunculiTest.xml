<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>	
	<LIGHT id="light0">                                    
        <enable value ="1" />                   	       
        <position  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
	
	<LIGHT id="light1">                                    
        <enable value ="1" />                   	      
        <position x="30" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
	
	<LIGHT id="light2">                                   
        <enable value ="1" />                   	       
        <position x="0" y="10" z="20" w="1" />       		   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

    <LIGHT id="light3">                                   
        <enable value ="1" />                   	       
        <position x="30" y="10" z="20" w="1" />       			
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           	
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
    <!-- Rocks -->
    <TEXTURE id="rocks">
        <file path="latrunculiImages/rocks.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
        <file path="latrunculiImages/vidral.jpg" />               
        <amplif_factor s="15" t="10" />                           
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
        <file path="latrunculiImages/bank.jpg" />                
        <amplif_factor s="1" t="1" />                           
    </TEXTURE>

    <TEXTURE id="steel">
      <file path="latrunculiImages/steel.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>
    
</TEXTURES>


<MATERIALS>
	<!-- Tree trunk material -->
	<MATERIAL id="trunkTreeMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />      
        <ambient r="0.1" g="0.1" b="0.1" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />       
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">                                  
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />       
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />       
        <ambient r="0.0" g="0.0" b="0.0" a="1" />        
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS> 
            <NODEREF id="chao" />
            <NODEREF id="sword" />
            <NODEREF id="shield" />
            <NODEREF id="pedestal" />
        </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="chao">      
        <MATERIAL id="null" />    
        <TEXTURE id="rocks" />       			

        <SCALE sx="8" sy="1" sz="10" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
				</DESCENDANTS>

    </NODE>

        <NODE id="sword">       
        <MATERIAL id="lightMaterial" />     
        <TEXTURE id="null" />  

          			
        <TRANSLATION x="-0.4" y="18" z="25" />
        <ROTATION axis="x" angle="180" />
        
        <DESCENDANTS>
       		<NODEREF id="blade" />  
            <NODEREF id="handle" />          
        </DESCENDANTS>
    </NODE>

    <NODE id="blade">       
        <MATERIAL id="lightMaterial" />     
        <TEXTURE id="steel" />     

        <TRANSLATION x="20" y="5" z="10" />

        <DESCENDANTS>
       		<NODEREF id="parteInferiorEspada" />          
            <NODEREF id="parteSuperiorEspada" />  
        </DESCENDANTS>
    </NODE>

    <NODE id="parteInferiorEspada">       
        <MATERIAL id="lightMaterial" />     
        <TEXTURE id="null" />       			

        <SCALE sx="0.5" sy="2.5" sz="0.1" />
        <SCALE sx="0.2" sy="0.5" sz="0.2" />
        <DESCENDANTS>
       		<NODEREF id="prisma" />          
        </DESCENDANTS>
    </NODE>

    <NODE id="parteSuperiorEspada">       
        <MATERIAL id="lightMaterial" />     
        <TEXTURE id="null" />    
        
        <TRANSLATION x="0.5" y="10.687" z="0.1" />
        <SCALE sx="0.0355" sy="0.1" sz="0.0077" />

        <DESCENDANTS>
       		<NODEREF id="piramide" />          
        </DESCENDANTS>
    </NODE>


    <NODE id="handle">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />     

        <TRANSLATION x="20" y="5" z="10" />

        <DESCENDANTS>
       		<NODEREF id="crossGuard" />          
            <NODEREF id="grip" />  
            <NODEREF id="pommel" /> 
        </DESCENDANTS>
    </NODE>

    <NODE id="crossGuard">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />   

        <TRANSLATION x="3.5" y="5.3" z="-0.28" />
        <SCALE sx="0.5" sy="0.05" sz="0.08" />
        <ROTATION axis="x" angle="90" />
       	<ROTATION axis="z" angle="90" /> 
        <DESCENDANTS>
       		<NODEREF id="prisma" />          
        </DESCENDANTS>
    </NODE>

    
    <NODE id="grip">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="0.5" y="4.7" z="0.1" />
        <SCALE sx="0.6" sy="0.8" sz="0.6" />
        <ROTATION axis="x" angle="90" />
        <DESCENDANTS>
            <NODEREF id="gripSup" />
            <NODEREF id="gripInf" />
            <NODEREF id="gripMid" />   
        </DESCENDANTS>

    </NODE> 

    <!-- Tree trunk -->
    <NODE id="gripSup">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />  

        <TRANSLATION x="0" y="0" z="-0.492" />
       
        <DESCENDANTS>
					<LEAF type="cylinder" args="0.5 0.15 0.3 20 20" /> 
        </DESCENDANTS>

    </NODE>

    <NODE id="gripInf">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />       			
       <TRANSLATION x="0" y="0" z="1.5" />
        <DESCENDANTS>
					<LEAF type="cylinder" args="0.5 0.3 0.15 20 20" /> 
        </DESCENDANTS>

    </NODE>

    <NODE id="gripMid">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />       			

        <DESCENDANTS>
			<LEAF type="cylinder" args="1.5 0.3 0.3 20 20" /> 
        </DESCENDANTS>

    </NODE>

    <!-- Light bulb -->
    <NODE id="pommel">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="0.525" y="3" z="0.1" />
        <SCALE sx="1.1" sy="1" sz="1.1" />
        
        <DESCENDANTS>
			<LEAF id="sphere1" type="sphere" args="0.2 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="shield">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="steel" />       			
        
        <TRANSLATION x="0" y="-2.8" z="8.3" />
        <ROTATION axis="x" angle="-5" />
        <TRANSLATION x="20" y="5" z="10" />
        <SCALE sx="1" sy="0.8" sz="0.1" />
        <DESCENDANTS>
			<NODEREF id="baseRow" />
            <NODEREF id="fesseAndChiefRow" />
        </DESCENDANTS>
    </NODE>

    <NODE id="baseRow">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />       			
        <ROTATION axis="x" angle="90" />
        <DESCENDANTS>
			<LEAF type="cylinder" args="4 2 0 20 20 1 0" /> 
        </DESCENDANTS>
    </NODE>

    <NODE id="fesseAndChiefRow">       
        <MATERIAL id="trunkTreeMaterial" />     
        <TEXTURE id="null" />
        <TRANSLATION x="0" y="4" z="0" />
        <ROTATION axis="x" angle="90" />
        <DESCENDANTS>
			<LEAF type="cylinder" args="4 2 2 20 20 0 1" /> 
        </DESCENDANTS>
    </NODE>


    <NODE id="pedestal">       
        <MATERIAL id="lightMaterial" />     
        <TEXTURE id="banco" />   
        <TRANSLATION x="15" y="-4" z="10" />
        <SCALE sx="1" sy="1" sz="1" />
        <DESCENDANTS>
       		<NODEREF id="prisma" />          
        </DESCENDANTS>
    </NODE>

    <NODE id="prisma">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <DESCENDANTS>
       		<NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />      
        </DESCENDANTS>

    </NODE>
    
     <!-- A pyramid -->
    <NODE id="piramide">       

        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			



        <DESCENDANTS>
       		<NODEREF id="meiaPiramide1" /> 
            <NODEREF id="meiaPiramide2" />       
  	 
        </DESCENDANTS>

    </NODE>


    <!-- Half a pyramid -->
    <NODE id="meiaPiramide1">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			

        <DESCENDANTS>
            <NODEREF id="meiaPiramide" />      
        </DESCENDANTS>

    </NODE>

    <!-- The other half -->
    <NODE id="meiaPiramide2">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			


		<ROTATION axis="y" angle="180" />

        <DESCENDANTS>
            <NODEREF id="meiaPiramide" />       
        </DESCENDANTS>

    </NODE>

    <!-- Generic half a pyramid -->
    <NODE id="meiaPiramide">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			

        <DESCENDANTS>
            <NODEREF id="facePiramide1" />       
            <NODEREF id="facePiramide2" />    	 
        </DESCENDANTS>

    </NODE>

    <!-- Pyramid face -->
   <NODE id="facePiramide1">       
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			


		<ROTATION axis="x" angle="44.42" />
       	<ROTATION axis="y" angle="-45" />
        
        <DESCENDANTS>
					<LEAF id="triangle1" type="triangle" args="2 0 12 12 0 2 0 0 0" />
        </DESCENDANTS>

    </NODE>

    <!-- Another pyramid face -->
    <NODE id="facePiramide2">      
        <MATERIAL id="null" />      
        <TEXTURE id="null" />       			


       	<ROTATION axis="z" angle="-44.42" />
       	<ROTATION axis="y" angle="45" />  

        <DESCENDANTS>
					<LEAF id="triangle1" type="triangle" args="2 0 12 12 0 2 0 0 0" />
        </DESCENDANTS>

    </NODE>

   
    <NODE id="faceCubo1">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="7.5" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>

    
     <NODE id="faceCubo2">      
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="2.5" />
		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>


    <NODE id="faceCubo3">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="7.5" y="4" z="7.5" />
		<ROTATION axis="y" angle="90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>


    <NODE id="faceCubo4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>

    </NODE>


    <NODE id="faceCubo5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />       			

        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
 					<LEAF  type="rectangle" args="0 4 5 0" />        
       </DESCENDANTS>

    </NODE>


    <NODE id="faceCubo6">       
        <MATERIAL id="null" />     
        <TEXTURE id="null" />       			

        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>
    </NODE>



</NODES>

</SCENE>